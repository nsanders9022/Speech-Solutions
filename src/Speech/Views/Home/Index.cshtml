@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using System.Security.Claims
@model IList<Speech.Models.Review>


<div>
    <br>
    <div id="myCarousel" class="carousel slide" data-ride="carousel">
        <!-- Indicators -->
        <ol class="carousel-indicators">
            <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
            <li data-target="#myCarousel" data-slide-to="1"></li>
            <li data-target="#myCarousel" data-slide-to="2"></li>
        </ol>

        <!-- Wrapper for slides -->
        <div class="carousel-inner" role="listbox">

            <div class="item active">
                <img class="carousel-image" src="~/images/speech4.png" alt="speech therapist working with child" width="460" height="300">
                <div class="carousel-caption">
                    <h3>Quality instruction from a certified therapist</h3>
                    <h4>@Html.ActionLink("Learn more", "Index", "About")</h4>
                </div>
            </div>

            <div class="item">
                <img class="carousel-image" src="~/images/speech5.jpg" alt="speech therapist working with child" width="460" height="300">
                <div class="carousel-caption">
                    <h3>Flexible scheduling</h3>
                    <h4>@Html.ActionLink("Schedule your consultation now", "Schedule", "Home")</h4>
                </div>
            </div>

            <div class="item">
                <img class="carousel-image" src="~/images/speech6.jpg" alt="speech therapist working with child" width="460" height="300">
                <div class="carousel-caption">
                    <h3>Read what others had to say about us</h3>
                    <h4>@Html.ActionLink("Reviews", "Index", "Review")</h4>
                </div>
            </div>

        </div>

        <!-- Left and right controls -->
        <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
            <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
            <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
</div>

<div class="home-body">
    <div class="container intro">
        <h1>Speech Solutions</h1>
        <hr />
        <h3 id="description">Speech Solutions is your first and only stop for online speech therapy needs for children. Our therapist, Dayna Sanders, provides exceptional one-on-one attention to help all children reach their speech goals. Because everything is conducted online, travel and accessability are no longer issues. </h3>
    </div>

    <div class="reviews row">
        @for( int i = 0; i < 3; i++)
        {
            <div class="bubble col-xs-4">
                <h4>@Model[i].Name</h4>
                <p><span class="quotes">&#10077;</span>@Model[i].Description</p> 
            </div>
        }
        <br />
    </div>
        <div class="reviews row">
            @if (User.Identity.IsAuthenticated && !User.IsInRole("Admin"))
                    {
                <button type="submit" class="btn">@Html.ActionLink("Add a review", "Create", "Review")</button>
            }
            <button type="submit" class="btn">@Html.ActionLink("See all Reviews", "Index", "Review")</button>
        </div>


    <div class="process container">
        <h1>Process</h1>
        <hr />
        <div class="process-images">
            <img class="process-icon" id="schedule-img" src="~/images/schedule.png" /> 
            <img class="process-icon" id="consultation-img" src="~/images/phoneCell.png" />
            <img class="process-icon" id="eval-img" src="~/images/eval.png" />
            <img class="process-icon" id="recommendations-img" src="~/images/results.png" />
            <img class="process-icon" id="sessions-img" src="~/images/onlineChat.png" />
        </div>

        <div class="schedule step">
            <h3>Schedule consultation</h3>
            <h4>View our @Html.ActionLink("schedule", "Schedule", "Home") page to select a time that works best for you.</h4>
            <h4>Most consultations last 60 minutes.</h4>
        </div>
        <div class="consultation step">
            <h3>Consult with the therapist.</h3>
            <h4>At the scheduled consultation time the therapist will call you.</h4>
            <h4>An initial screening of your child will be conducted to determine qualification for this therapy.</h4>
            <h4>A technical screening will be performed to ensure everything is working properly.</h4>
            <h4>Schedule the evaluation.</h4>
        </div>
        <div class="evaluation step">
            <h3>Perform evaluation</h3>
            <h4>Evaluations last 2-3 hours.</h4>
        </div>
        <div class="recommendations step">
            <h3>Recommendations and schedule sessions</h3>
            <h4>Recommendations will be provided based on the evaulation.</h4>
            <h4>Sessions will be scheduled.</h4>
        </div>
        <div class="sessions step">
            <h3>Therapy begins</h3>
            <h4>Sessions will take place for the duration and frequency that is best for the child and for your schedule.</h4>
        </div>
    </div>

</div>

