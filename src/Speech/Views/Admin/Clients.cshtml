@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model IEnumerable<Speech.Models.Profile>

<div class="container user-form">

    <h1>All Clients</h1>
    <hr />

    <ol>
        @foreach (var client in Model)
        {
            <li class="assign-role">@Html.ActionLink((string)client.ClientFirst + " " + client.ClientLast, "Details", new { id = client.ProfileId })</li>
        }
    </ol>

    <button class="btn">@Html.ActionLink("Assign goals to a client", "Create", "Goal")</button>
    <button class="btn">@Html.ActionLink("Write a note for a client", "Create", "Note")</button>


</div>