@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using System.Security.Claims

@model Speech.Models.Profile


<div class="container">
    @if (User.Identity.IsAuthenticated)
    {

        <h1>View @Html.DisplayFor(model => model.FirstName)'s Progress</h1>
        <hr />

        <div class="row">
            <h2>Goals:</h2>
            @if (Model.Goals.Count > 0)
            {
                <div class="col-sm-6">
                    <h4>Goals in progress:</h4>
                    <hr />

                    @foreach (var goal in Model.Goals)
                    {
                        @if (goal.Completed == false)
                        {
                            <li class="goal-list">@goal.Description</li>
                        }
                    }
                </div>

                <div class="col-sm-6">
                    <h4>Goals that have been met:</h4>
                    <hr />
                    @foreach (var goal in Model.Goals)
                    {
                        @if (goal.Completed == true)
                        {
                            <li class="goal-list">@goal.Description</li>
                        }
                    }
                </div>
            }
            else
            {
                <p class="goal-list">No goals have been added yet by the therapist.</p>
            }
        </div>

        <div class="row">
          
            <h2>Notes:</h2>
            @if (Model.Notes.Count > 0)
            {

                @foreach (var note in Model.Notes)
                {
                    <li class="goal-list">@note.Description</li>
                }

            }
            else
            {
                <li class="goal-list">No notes have been added yet by the therapist.</li>
            }
          
            
        </div>
    }
</div>