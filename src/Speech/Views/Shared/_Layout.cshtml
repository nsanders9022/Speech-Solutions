<body>
    <div id="container">
        <nav class="navbar navbar-inverse navbar-fixed-top top-navbar" role="navigation">
            <div class="container">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <a class="navbar-brand" href="/">SPEECH SOLUTIONS</a>
                </div>
                <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                    <ul class="nav navbar-nav">
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">About<span class="caret"></span></a>
                            <ul class="dropdown-menu">
                                <li>@Html.ActionLink("Our Therapist", "Therapists", "About")</li>
                                <li>@Html.ActionLink("Our Company", "Company", "About")</li>
                                <li>@Html.ActionLink("Teletherapy", "Teletherapy", "About")</li>
                                <li>@Html.ActionLink("Reviews", "Index", "Review")</li>
                            </ul>
                        </li>

                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">Resources<span class="caret"></span></a>
                            <ul class="dropdown-menu">
                                <li>@Html.ActionLink("Speech Milestones", "Milestones", "Resources")</li>
                                <li>@Html.ActionLink("Helpful Resources", "Resources", "Resources")</li>
                            </ul>
                        </li>
                       </ul>
                    <ul class="nav navbar-nav navbar-right">
                        @if (User.Identity.IsAuthenticated)
                    {
                            <li class="nav-link">
                                @Html.ActionLink("Account Information", "Index", "Profile", new { userName = User.Identity.Name })
                            </li>
                            <li class="nav-link">
                                <span class="glyphicon glyphicon-log-out">
                                    @Html.ActionLink("Log out", "LogOff", "Account")
                                </span>
                            </li>
                    }
                    else
                    {
                            <li class="nav-link"><span class="glyphicon glyphicon-user">@Html.ActionLink("Register", "Register", "Account")</span></li>
                            <li class="nav-link"><span class="glyphicon glyphicon-log-in">@Html.ActionLink("Login", "Login", "Account")</span></li>
                    }
                    </ul>
                </div>
            </div>
        </nav>

