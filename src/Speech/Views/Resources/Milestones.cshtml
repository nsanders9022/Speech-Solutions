@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="text-center">Speech Milestones for Children</h1>
            <hr />
            <h4 class="text-center">Find out what milestones your child should be reaching by certain ages to determine if they need our help.</h4>
            <ul class="timeline">
                <li>
                    <div class="timeline-image">
                        @*<img class="img-circle img-responsive" src="https://cdn.pixabay.com/photo/2016/09/11/08/35/mathematics-1660859_960_720.png" alt="">*@
                    </div>
                    <div class="timeline-panel">
                        <div class="timeline-heading">
                            <h4>Zero to One</h4>
                        </div>
                        <div class="timeline-body">
                            <p class="text-muted">Makes cooing and babbling noises, most often beginning with p, b, and m. </p>
                            <p>Babbled words increase in number of syllables, such as "gagaga" towards the last half of the first year.</p>
                            <p class="text-muted">Can speak one or two words towards the one year mark.</p>
                        </div>
                    </div>
                    <div class="line"></div>
                </li>
                <li class="timeline-inverted">
                    <div class="timeline-image">
                        @*<img class="img-circle img-responsive" src="https://cdn.pixabay.com/photo/2016/09/11/08/36/mathematics-1660868_960_720.png" alt="">*@
                    </div>
                    <div class="timeline-panel">
                        <div class="timeline-heading">
                            <h4>One to Two</h4>
                        </div>
                        <div class="timeline-body">
                            <p class="text-muted">Regularly learns new words.</p>
                            <p class="text-muted">Says up to two-worded questions and phrases.</p>
                            <p class="text-muted">Says words beginning with many different sounds.</p>
                        </div>
                    </div>
                    <div class="line"></div>
                </li>
                <li>
                    <div class="timeline-image">
                        @*<img class="img-circle img-responsive" src="https://cdn.pixabay.com/photo/2016/09/11/08/35/mathematics-1660858_960_720.png" alt="">*@
                    </div>
                    <div class="timeline-panel">
                        <div class="timeline-heading">
                            <h4>Two to Three</h4>
                        </div>
                        <div class="timeline-body">
                            <p class="text-muted">Says up to three-worded questions or phrases.</p>
                            <p class="text-muted">Speech is understood by family.</p>
                            <p class="text-muted">Knows most words.</p>
                        </div>
                    </div>
                    <div class="line"></div>
                </li>
                <li class="timeline-inverted">
                    <div class="timeline-image">
                        @*<img class="img-circle img-responsive" src="https://cdn.pixabay.com/photo/2016/09/11/08/36/mathematics-1660867_960_720.png" alt="">*@
                    </div>
                    <div class="timeline-panel">
                        <div class="timeline-heading">
                            <h4>Three to Four</h4>
                        </div>
                        <div class="timeline-body">
                            <p class="text-muted">Says sentences or questions that contain four or more words.</p>
                            <p class="text-muted">Speech is fluid.</p>
                            <p class="text-muted">Can answer many questions.</p>
                        </div>
                    </div>
                    <div class="line"></div>
                </li>
                <li>
                    <div class="timeline-image">
                        @*<img class="img-circle img-responsive" src="https://cdn.pixabay.com/photo/2016/09/11/08/35/mathematics-1660860_960_720.png" alt="">*@
                    </div>
                    <div class="timeline-panel">
                        <div class="timeline-heading">
                            <h4>Four to Five</h4>
                        </div>
                        <div class="timeline-body">
                            <p class="text-muted">Says detailed sentences.</p>
                            <p class="text-muted">Correctly says most connsonants.</p>
                            <p class="text-muted">Can use correct grammer.</p>
                        </div>
                    </div>
                </li>
            </ul>
        </div>
    </div>
</div>